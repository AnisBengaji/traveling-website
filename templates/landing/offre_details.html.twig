<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="images/fevicon.png" type="">

  <title>{% block title %}{{ offre.titre }} - Détails{% endblock %}</title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

  <!--owl slider stylesheet -->
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

  <!-- font awesome style -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Custom styles for this template -->
  <link href="css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="css/responsive.css" rel="stylesheet" />
  <!-- custom style for packages -->
  <link href="css/custom.css" rel="stylesheet" />

</head>

<body class="sub_page">
{% block content %}
  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <div class="header_top">
        <div class="container-fluid">
          <div class="contact_nav">
            <a href="">
              <i class="fa fa-phone" aria-hidden="true"></i>
              <span>
                Call : +01 123455678990
              </span>
            </a>
            <a href="">
              <i class="fa fa-envelope" aria-hidden="true"></i>
              <span>
                Email : demo@gmail.com
              </span>
            </a>
            <a href="">
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              <span>
                Location
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="header_bottom">
        <div class="container-fluid">
          <nav class="navbar navbar-expand-lg custom_nav-container">
            <a class="navbar-brand" href="{{ path('landing_index') }}">
              <span>
                Carint
              </span>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('landing_index') }}">Accueil</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="{{ path('landing_service') }}">Services <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('landing_about') }}">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('landing_contact') }}">Contact Us</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#"> <i class="fa fa-user" aria-hidden="true"></i> Login</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <!-- Détails de l'offre section -->
  <section class="about_section layout_padding">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="detail-box bg-white p-4 rounded shadow-sm">
            <div class="heading_container">
              <h2 class="text-primary mb-4">
                {{ offre.titre }}
              </h2>
            </div>
            <p class="text-muted mb-4">
              {{ offre.description }}
            </p>
            <div class="mt-4">
              <p class="mb-2"><i class="fa fa-map-marker text-primary mr-2"></i> <strong>Destination:</strong> {{ offre.destination }}</p>
              <p class="mb-2"><i class="fa fa-tag text-primary mr-2"></i> <strong>Prix:</strong> {{ offre.prix }} €</p>
            </div>
            <div class="mt-4">
              <a href="{{ path('landing_service2') }}" class="btn btn-primary">
                <i class="fa fa-arrow-left mr-2"></i> Retour aux offres
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="img-box">
            {% if offre.image %}
              <img src="{{ asset('uploads/images/' ~ offre.image) }}" alt="{{ offre.titre }}" class="img-fluid rounded shadow">
            {% else %}
              <img src="images/s1.png" alt="Image par défaut" class="img-fluid rounded shadow">
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tutoriels section -->
  <section class="service_section layout_padding">
    <div class="container">
      <div class="heading_container text-center mb-5">
        <h2 class="text-primary">
          Tutoriels <span>Associés</span>
        </h2>
      </div>
      <div class="row">
        {% if offre.tutorials is not empty %}
          {% for tutorial in offre.tutorials %}
            <div class="col-md-6 mb-4">
              <div class="box bg-white p-4 rounded shadow-sm">
                <div class="detail-box">
                  <h5 class="text-primary mb-3">{{ tutorial.nomTutorial }}</h5>
                  <div class="mt-3">
                    <p class="mb-2"><i class="fa fa-calendar text-primary mr-2"></i> Du {{ tutorial.dateDebut|date('d/m/Y') }} au {{ tutorial.dateFin|date('d/m/Y') }}</p>
                    <p class="mb-2"><i class="fa fa-tag text-primary mr-2"></i> Prix: {{ tutorial.prixTutorial }} €</p>
                  </div>
                  <a href="{{ tutorial.url }}" target="_blank" class="btn btn-primary mt-3">
                    <i class="fa fa-external-link mr-2"></i> Accéder au tutoriel
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <div class="col-12">
            <div class="alert alert-info">
              <i class="fa fa-info-circle mr-2"></i> Aucun tutoriel n'est associé à cette offre pour le moment.
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  <!-- info section -->
  <section class="info_section layout_padding2">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3 info_col">
          <div class="info_contact">
            <h4>
              Address
            </h4>
            <div class="contact_link_box">
              <a href="">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <span>
                  Location
                </span>
              </a>
              <a href="">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <span>
                  Call +01 1234567890
                </span>
              </a>
              <a href="">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <span>
                  demo@gmail.com
                </span>
              </a>
            </div>
          </div>
          <div class="info_social">
            <a href="">
              <i class="fa fa-facebook" aria-hidden="true"></i>
            </a>
            <a href="">
              <i class="fa fa-twitter" aria-hidden="true"></i>
            </a>
            <a href="">
              <i class="fa fa-linkedin" aria-hidden="true"></i>
            </a>
            <a href="">
              <i class="fa fa-instagram" aria-hidden="true"></i>
            </a>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 info_col">
          <div class="info_detail">
            <h4>
              Info
            </h4>
            <p>
              necessary, making this the first true generator on the Internet. It uses a dictionary of over 200 Latin words, combined with a handful
            </p>
          </div>
        </div>
        <div class="col-md-6 col-lg-2 mx-auto info_col">
          <div class="info_link_box">
            <h4>
              Links
            </h4>
            <div class="info_links">
              <a class="" href="{{ path('landing_index') }}">
                <img src="images/nav-bullet.png" alt="">
                Home
              </a>
              <a class="" href="{{ path('landing_about') }}">
                <img src="images/nav-bullet.png" alt="">
                About
              </a>
              <a class="active" href="{{ path('landing_service2') }}">
                <img src="images/nav-bullet.png" alt="">
                Services
              </a>
              <a class="" href="{{ path('landing_contact') }}">
                <img src="images/nav-bullet.png" alt="">
                Contact Us
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 info_col">
          <h4>
            Subscribe
          </h4>
          <form action="#">
            <input type="text" placeholder="Enter email" />
            <button type="submit">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- end info section -->

  <!-- footer section -->
  <section class="footer_section">
    <div class="container">
      <p>
        &copy; <span id="displayYear"></span> All Rights Reserved By
        <a href="https://html.design/">Free Html Templates</a>
      </p>
    </div>
  </section>
  <!-- footer section -->

  <!-- jQery -->
  <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
  <!-- popper js -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <!-- bootstrap js -->
  <script type="text/javascript" src="js/bootstrap.js"></script>
  <!-- owl slider -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
  </script>
  <!-- custom js -->
  <script type="text/javascript" src="js/custom.js"></script>
  <!-- Google Map -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
  </script>
  <!-- End Google Map -->

  <div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Note moyenne</h5>
        {% if offre.rating %}
            <div class="d-flex align-items-center mb-3">
                <div class="text-warning me-2">
                    {% for i in 1..5 %}
                        {% if i <= offre.rating|round %}
                            <i class="fas fa-star"></i>
                        {% else %}
                            <i class="far fa-star"></i>
                        {% endif %}
                    {% endfor %}
                </div>
                <span class="ms-2">{{ offre.rating|number_format(1) }}</span>
            </div>
        {% else %}
            <p class="text-muted">Aucune note pour le moment</p>
        {% endif %}

        <form action="{{ path('landing_service_rate', {'id': offre.id}) }}" method="post">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_widget(form.rating) }}
            </div>
            <button type="submit" class="btn btn-primary">Noter cette offre</button>
            {{ form_end(form) }}
        </form>
    </div>
  </div>
{% endblock %}
</body>

</html> 