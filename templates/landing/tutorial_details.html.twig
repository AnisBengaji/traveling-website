{% extends 'base.html.twig' %}

{% block title %}{{ tutorial.nomTutorial }} - Détails du tutoriel{% endblock %}

{% block body %}
<div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
        <div class="header_top">
            <div class="container-fluid">
                <div class="contact_nav">
                    <a href="">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                        <span>Call : +01 123455678990</span>
                    </a>
                    <a href="">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <span>Email : demo@gmail.com</span>
                    </a>
                    <a href="">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        <span>Location</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="header_bottom">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="{{ path('landing_index') }}">
                        <span>Carint</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('landing_index') }}">Accueil</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('landing_service') }}">Services <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('landing_about') }}">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('landing_contact') }}">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"> <i class="fa fa-user" aria-hidden="true"></i> Login</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- end header section -->
</div>

<!-- Tutorial Details Section -->
<section class="service_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="detail-box">
                    <h2>{{ tutorial.nomTutorial }}</h2>
                    <div class="info-list mt-4">
                        <p>
                            <i class="far fa-calendar-alt text-primary"></i>
                            <strong>Période :</strong> 
                            Du {{ tutorial.dateDebut|date('d/m/Y') }} au {{ tutorial.dateFin|date('d/m/Y') }}
                        </p>
                        <p>
                            <i class="fas fa-tag text-primary"></i>
                            <strong>Prix :</strong> 
                            {{ tutorial.prixTutorial }} €
                        </p>
                        <p>
                            <i class="fas fa-link text-primary"></i>
                            <strong>Lien du tutoriel :</strong>
                            <a href="{{ tutorial.url }}" target="_blank" class="btn btn-primary ml-2">
                                <i class="fas fa-external-link-alt"></i> Accéder au contenu
                            </a>
                        </p>
                        <div class="mt-4">
                            <a href="{{ path('landing_service_show2', {'id': tutorial.offre.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à l'offre
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* Tutorial details styles */
.detail-box {
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
}

.info-list p {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
}

.info-list i {
    margin-right: 15px;
    width: 20px;
    color: #007bff;
}

.btn-primary {
    padding: 0.5rem 1rem;
    border-radius: 5px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-primary i {
    margin: 0;
}

.btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
    color: white;
    text-decoration: none;
}
</style>
{% endblock %} 