    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }
        .hero_area {
            background: linear-gradient(135deg, #007bff 0%, #00c4cc 100%);
            color: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .header_section {
            background: rgba(0, 0, 0, 0.1);
        }
        .contact_nav a {
            color: #fff;
            transition: color 0.3s;
        }
        .contact_nav a:hover {
            color: #ffd700;
        }
        .card {
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }
        .btn-primary {
            background: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: #0056b3;
        }
        .btn-secondary {
            border-radius: 25px;
            padding: 10px 20px;
        }
        .fb-post .card-header {
            background: #fff;
            border-bottom: 1px solid #eee;
        }
        .comment-section .bg-light {
            background: #f1f3f5 !important;
            border-radius: 8px;
        }
        .info_section {
            background: #343a40;
            color: white;
            border-radius: 0 0 10px 10px;
        }
        .footer_section {
            background: #212529;
            color: #adb5bd;
            padding: 20px 0;
        }
        .footer_section a {
            color: #ffd700;
            text-decoration: none;
        }
        .footer_section a:hover {
            text-decoration: underline;
        }
        .streams-filter {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            border: 1px solid rgba(0,0,0,0.05);
        }
        .streams-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .streams-title {
            font-weight: 700;
            color: #007bff;
            margin-right: 15px;
            font-size: 1.1rem;
        }
        .streams-icon {
            background: #007bff;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }
        .stream-tag {
            display: inline-block;
            padding: 8px 15px;
            margin: 0 8px 8px 0;
            border-radius: 20px;
            background: white;
            color: #495057;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            border: 1px solid #dee2e6;
        }
        .stream-tag:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }
        .stream-tag.active {
            background: #007bff;
            color: white;
            border-color: #007bff;
        }
        .stream-tag.all-streams {
            background: #28a745;
            color: white;
            border-color: #28a745;
        }
        .stream-tag.all-streams.active {
            background: #218838;
        }
    </style>
    {% block head %}
    {% endblock %}
    {% block stylesheets %}
    {% endblock %}
</head>
