{# templates/tutorial/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le Tutoriel{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Modifier le Tutoriel</h1>

        {# Messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="mb-3">
                {{ form_label(form.nom_tutorial, 'Nom du tutoriel', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom_tutorial, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom_tutorial, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDebut, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateFin, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.prix_tutorial, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix_tutorial, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix_tutorial, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.offre, 'Offre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.offre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.offre, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-success">Mettre à jour</button>
                <a href="{{ path('app_tutorial_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}