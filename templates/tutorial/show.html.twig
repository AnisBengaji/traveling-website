{# templates/tutorial/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du tutoriel{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails du tutoriel</h1>

        {# Messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tutorial.id }}</td>
                </tr>
                <tr>
                    <th>Nom du tutoriel</th>
                    <td>{{ tutorial.nomTutorial }}</td>
                </tr>
                <tr>
                    <th>Date de début</th>
                    <td>{{ tutorial.dateDebut ? tutorial.dateDebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ tutorial.dateFin ? tutorial.dateFin|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ tutorial.prixTutorial }}</td>
                </tr>
                <tr>
                    <th>URL</th>
                    <td><a href="{{ tutorial.url }}" target="_blank">{{ tutorial.url }}</a></td>
                </tr>
                <tr>
                    <th>Offre associée</th>
                    <td>{{ tutorial.offre.titre }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_tutorial_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_tutorial_edit', {'id': tutorial.id}) }}" class="btn btn-warning">Modifier</a>
        </div>
    </div>
{% endblock %}