<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier la Réservation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .form-error {
            color: #6c757d; /* Gris Bootstrap */
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Modification de réservation
                    </h2>
                    <a href="{{ path('reservation_index') }}" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <!-- Section Statut -->
                    <div class="card mb-4 border-primary">
                        <div class="card-header bg-light py-2">
                            <h3 class="h6 mb-0"><i class="fas fa-info-circle me-2 text-primary"></i>Statut</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                {{ form_widget(form.status, { 
                                    'attr': { 
                                        'class': 'form-select',
                                        'required': false
                                    } 
                                }) }}
                                <div class="form-error">
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Prix Total -->
                    <div class="card mb-4 border-success">
                        <div class="card-header bg-light py-2">
                            <h3 class="h6 mb-0"><i class="fas fa-euro-sign me-2 text-success"></i>Montant</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-text bg-success text-white">
                                        <i class="fas fa-coins"></i>
                                    </span>
                                    {{ form_widget(form.priceTotal, { 
                                        'attr': { 
                                            'class': 'form-control',
                                            'required': false,
                                            'pattern': null
                                        } 
                                    }) }}
                                </div>
                                <div class="form-error">
                                    {{ form_errors(form.priceTotal) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Paiement -->
                    <div class="card mb-4 border-info">
                        <div class="card-header bg-light py-2">
                            <h3 class="h6 mb-0"><i class="fas fa-credit-card me-2 text-info"></i>Paiement</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                {{ form_widget(form.modePaiement, { 
                                    'attr': { 
                                        'class': 'form-select',
                                        'required': false
                                    } 
                                }) }}
                                <div class="form-error">
                                    {{ form_errors(form.modePaiement) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Événement -->
                    <div class="card mb-4 border-warning">
                        <div class="card-header bg-light py-2">
                            <h3 class="h6 mb-0"><i class="fas fa-calendar-alt me-2 text-warning"></i>Événement</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                {{ form_widget(form.evenement, { 
                                    'attr': { 
                                        'class': 'form-select',
                                        'required': false
                                    } 
                                }) }}
                                <div class="form-error">
                                    {{ form_errors(form.evenement) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
</html>