
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Nouvelle Réservation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0">
                    <i class="fas fa-calendar-plus me-2"></i>
                    Nouvelle réservation
                </h2>
                <a href="{{ path('reservation_index') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <!-- Messages Flash -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} d-flex align-items-center mb-4">
                        <i class="fas fa-info-circle me-2 fa-lg"></i>
                        <div>{{ message }}</div>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Formulaire -->
            {{ form_start(form) }}
                <div class="row g-4">
                    <!-- Colonne Événement -->
                    <div class="col-md-6">
                        <div class="card border-primary h-100">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-calendar-day me-2 text-primary"></i>Événement</h3>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    {{ form_widget(form.evenement, { 
                                        'attr': { 
                                            'class': 'form-select' ~ (form.evenement.vars.errors ? ' is-invalid' : ''),
                                            'data-style': 'btn-primary'
                                        } 
                                    }) }}
                                    {{ form_errors(form.evenement) }}
                                    <small class="form-text text-muted mt-2">Sélectionnez l'événement concerné</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Colonne Détails -->
                    <div class="col-md-6">
                        <div class="card border-success h-100">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-euro-sign me-2 text-success"></i>Montant & Paiement</h3>
                            </div>
                            <div class="card-body">
                                <!-- Prix Total -->
                                <div class="mb-4">
                                    <div class="input-group">
                                        <span class="input-group-text bg-success text-white">
                                            <i class="fas fa-coins"></i>
                                        </span>
                                        {{ form_widget(form.priceTotal, { 
                                            'attr': { 
                                                'class': 'form-control' ~ (form.priceTotal.vars.errors ? ' is-invalid' : ''),
                                                'placeholder': 'Montant total'
                                            } 
                                        }) }}
                                    </div>
                                    {{ form_errors(form.priceTotal) }}
                                    <small class="form-text text-muted mt-2">Incluant taxes et frais</small>
                                </div>

                                <!-- Mode de Paiement -->
                                <div class="mb-4">
                                    {{ form_widget(form.modePaiement, { 
                                        'attr': { 
                                            'class': 'form-select' ~ (form.modePaiement.vars.errors ? ' is-invalid' : ''),
                                            'data-style': 'btn-success'
                                        } 
                                    }) }}
                                    {{ form_errors(form.modePaiement) }}
                                    <small class="form-text text-muted mt-2">Méthode de règlement</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statut -->
                    <div class="col-12">
                        <div class="card border-warning">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-info-circle me-2 text-warning"></i>Statut de la réservation</h3>
                            </div>
                            <div class="card-body">
                                {{ form_widget(form.status, { 
                                    'attr': { 
                                        'class': 'form-select' ~ (form.status.vars.errors ? ' is-invalid' : ''),
                                        'data-style': 'btn-warning'
                                    } 
                                }) }}
                                {{ form_errors(form.status) }}
                                <small class="form-text text-muted mt-2">Définir le statut initial</small>
                            </div>
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="col-12 mt-4">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="fas fa-save me-2"></i>Créer la réservation
                            </button>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
