<form method="post" action="{{ path('app_comment_delete', {'id': comment.idComment}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this comment?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.idComment) }}">
    <button class="btn text-white px-4 ms-2" style="background-color: #EA4335;">
        <i class="fa fa-trash me-1"></i> Delete
    </button>
</form>