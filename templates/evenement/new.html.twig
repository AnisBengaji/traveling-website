*<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un Nouvel Événement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-calendar-plus me-2"></i> Nouvel Événement
                    </h2>
                    <a href="{{ path('evenement_admin') }}" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="row g-4">

                    <!-- Colonne principale -->
                    <div class="col-md-8">
                        <div class="card border-primary mb-4">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-info-circle me-2 text-primary"></i> Informations de base</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    {{ form_label(form.nom) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-tag"></i></span>
                                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                    {{ form_errors(form.nom) }}
                                </div>

                                <div class="mb-4">
                                    {{ form_label(form.Description) }}
                                    {{ form_widget(form.Description, { 'attr': {'class': 'form-control', 'rows': 3} }) }}
                                    <div class="form-text">Description détaillée de l'événement</div>
                                    {{ form_errors(form.Description) }}
                                </div>

                                <div class="mb-4">
                                    {{ form_label(form.imageFile) }}
                                    {{ form_widget(form.imageFile, {
                                        'attr': {
                                            'class': 'form-control',
                                            'accept': 'image/*'
                                        }
                                    }) }}
                                    {{ form_errors(form.imageFile) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Colonne droite (prix) -->
                    <div class="col-md-4">
                        <div class="card border-success mb-4">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-euro-sign me-2 text-success"></i> Tarification</h3>
                            </div>
                            <div class="card-body">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-success text-white"><i class="fas fa-coins"></i></span>
                                    {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                {{ form_errors(form.price) }}
                            </div>
                        </div>
                    </div>

                    <!-- Dates -->
                    <div class="col-12">
                        <div class="card border-warning mb-4">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-clock me-2 text-warning"></i> Dates</h3>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        {{ form_label(form.Date_EvenementDepart) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-play"></i></span>
                                            {{ form_widget(form.Date_EvenementDepart, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                        {{ form_errors(form.Date_EvenementDepart) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(form.Date_EvenementArriver) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-stop"></i></span>
                                            {{ form_widget(form.Date_EvenementArriver, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                        {{ form_errors(form.Date_EvenementArriver) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Localisation -->
                    <div class="col-12">
                        <div class="card border-info mb-4">
                            <div class="card-header bg-light py-2">
                                <h3 class="h6 mb-0"><i class="fas fa-map-marker-alt me-2 text-info"></i> Localisation</h3>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        {{ form_label(form.lieu) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                            {{ form_widget(form.lieu, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                        {{ form_errors(form.lieu) }}
                                    </div>
                                    <div class="col-md-3">
                                        {{ form_label(form.latitude) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                            {{ form_widget(form.latitude, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                        {{ form_errors(form.latitude) }}
                                    </div>
                                    <div class="col-md-3">
                                        {{ form_label(form.longitude) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                            {{ form_widget(form.longitude, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                        {{ form_errors(form.longitude) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="col-12">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="fas fa-calendar-check me-2"></i>Créer l'événement
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>