{# templates/publication/show.html.twig #}
{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}Publication Details{% endblock %}

{% block content %}
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">
      <a href="{{ path('landing_index') }}" class="text-white text-decoration-none">Carint Admin</a>
    </div>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('admin_dashboard') }}">
          <i class="fa fa-tachometer me-2" aria-hidden="true"></i> Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="{{ path('app_publication_index') }}">
          <i class="fa fa-file-text me-2" aria-hidden="true"></i> Publications
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_category_index') }}">
          <i class="fa fa-list me-2" aria-hidden="true"></i> destinations
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_service') }}">
          <i class="fa fa-cogs me-2" aria-hidden="true"></i> offres
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_contact') }}">
          <i class="fa fa-envelope me-2" aria-hidden="true"></i> Contact Requests
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">
          <i class="fa fa-sign-out me-2" aria-hidden="true"></i> Logout
        </a>
      </li>
    </ul>
  </div>

  <!-- Topbar -->
  <div class="topbar">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Publication Details</h4>
      <div>
        <span class="me-3"><i class="fa fa-user me-1" aria-hidden="true"></i> Admin User</span>
        <a href="#" class="btn btn-sm btn-outline-danger"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="container-fluid">
      <div class="row mb-4">
        <div class="col-12">
          <div class="dashboard-card">
            <h3>Publication Details</h3>
            
            <div class="card shadow mt-3">
              <div class="card-header bg-primary text-white">
                <h4 class="mb-0">{{ publication.title }}</h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover">
                    <tbody>
                      <tr>
                        <th class="bg-light" style="width: 200px;">ID</th>
                        <td>{{ publication.idPublication }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Title</th>
                        <td>{{ publication.title }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Content</th>
                        <td>{{ publication.contenu }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Publication Date</th>
                        <td>{{ publication.datePublication ? publication.datePublication|date('Y-m-d') : '' }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Author</th>
                        <td>{{ publication.Author.nom }} {{ publication.Author.prenom }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Visibility</th>
                        <td>{{ publication.visibility }}</td>
                      </tr>
                      <tr>
                        <th class="bg-light">Image</th>
                        <td>
                          {% if publication.image %}
                            <img src="{{ asset('uploads/publications/' ~ publication.image) }}" alt="{{ publication.title }}" class="img-thumbnail" style="max-height: 200px;">
                          {% else %}
                            {{ publication.image }}
                          {% endif %}
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="card-footer">
                <div class="d-flex justify-content-between">
                  <a href="{{ path('app_publication_index') }}" class="btn btn-admin">
                    <i class="fa fa-arrow-left me-1"></i> Back to List
                  </a>
                  <div>
                    <a href="{{ path('app_publication_edit', {'id': publication.idPublication}) }}" class="btn btn-warning me-2">
                      <i class="fa fa-edit me-1"></i> Edit
                    </a>
                    {{ include('publication/_delete_form.html.twig') }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}