{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}New Category - Admin{% endblock %}

{% block content %}
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">
      <a href="{{ path('landing_index') }}" class="text-white text-decoration-none">Carint Admin</a>
    </div>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('admin_dashboard') }}">
          <i class="fa fa-tachometer me-2" aria-hidden="true"></i> Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_publication_index') }}">
          <i class="fa fa-file-text me-2" aria-hidden="true"></i> Publications
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="{{ path('app_category_index') }}">
          <i class="fa fa-list me-2" aria-hidden="true"></i> Destinations
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_service') }}">
          <i class="fa fa-cogs me-2" aria-hidden="true"></i> Offres
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_contact') }}">
          <i class="fa fa-envelope me-2" aria-hidden="true"></i> Contact Requests
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">
          <i class="fa fa-sign-out me-2" aria-hidden="true"></i> Logout
        </a>
      </li>
    </ul>
  </div>

  <!-- Topbar -->
  <div class="topbar">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="mb-0">New Category</h4>
      <div>
        <span class="me-3"><i class="fa fa-user me-1" aria-hidden="true"></i> Admin User</span>
        <a href="#" class="btn btn-sm btn-outline-danger"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="container-fluid">
      <div class="row mb-4">
        <div class="col-12">
          <div class="dashboard-card">
            <h3>Create New Category</h3>
            
            {# Form Start with novalidate to disable HTML5 validation #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
              <div class="form-group">
                {{ form_label(form.nomCategory, 'Category Name') }}
                {{ form_widget(form.nomCategory, {'attr': {'class': 'form-control'}}) }}
                {# Display Symfony validation error messages for nomCategory field #}
                {{ form_errors(form.nomCategory) }}
              </div>
              <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                {# Display Symfony validation error messages for description field #}
                {{ form_errors(form.description) }}
              </div>
              <div class="text-center mt-3">
                <button type="submit" class="btn btn-admin">
                  <i class="fa fa-save"></i> Save
                </button>
              </div>
            {{ form_end(form) }}
            
            <div class="text-center mt-4">
              <a href="{{ path('app_category_index') }}" class="btn btn-admin">
                <i class="fa fa-arrow-left"></i> Back to List
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .main-content {
      margin-left: 250px;
      padding: 80px 20px 20px;
    }

    .dashboard-card {
      max-width: 600px;
      margin: 0 auto;
      background: #ffffff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 24px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: 600;
      color: #2c3e50;
      font-size: 0.9rem;
      margin-bottom: 8px;
    }

    .form-control {
      border: 1px solid #ced4da;
      border-radius: 5px;
      padding: 10px;
      font-size: 0.9rem;
      transition: border-color 0.3s;
    }

    .form-control:focus {
      border-color: #3498db;
      box-shadow: 0 0 5px rgba(52, 152, 219, 0.2);
      outline: none;
    }

    .btn-admin {
      background: #3498db;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      color: white;
      font-weight: 600;
      transition: background 0.3s;
    }

    .btn-admin:hover {
      background: #2980b9;
    }

    .form-error-message {
      color: #dc3545;
      font-size: 0.85rem;
      margin-top: 5px;
    }
  </style>
{% endblock %}
