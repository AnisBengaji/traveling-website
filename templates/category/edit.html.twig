{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}Edit Category - {{ category.nomCategory }} - Admin{% endblock %}

{% block content %}
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">
      <a href="{{ path('landing_index') }}" class="text-white text-decoration-none">Carint Admin</a>
    </div>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('admin_dashboard') }}">
          <i class="fa fa-tachometer me-2" aria-hidden="true"></i> Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_publication_index') }}">
          <i class="fa fa-file-text me-2" aria-hidden="true"></i> Publications
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="{{ path('app_category_index') }}">
          <i class="fa fa-list me-2" aria-hidden="true"></i> Destinations
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_service') }}">
          <i class="fa fa-cogs me-2" aria-hidden="true"></i> Offres
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('landing_contact') }}">
          <i class="fa fa-envelope me-2" aria-hidden="true"></i> Contact Requests
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">
          <i class="fa fa-sign-out me-2" aria-hidden="true"></i> Logout
        </a>
      </li>
    </ul>
  </div>

  <!-- Topbar -->
  <div class="topbar">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Edit Category - {{ category.nomCategory }}</h4>
      <div>
        <span class="me-3"><i class="fa fa-user me-1" aria-hidden="true"></i> Admin User</span>
        <a href="#" class="btn btn-sm btn-outline-danger"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="container-fluid">
      <div class="row mb-4">
        <div class="col-12">
          <div class="dashboard-card">
            <div class="card-header" style="background-color: #3a6ea5; color: white; border-radius: 8px 8px 0 0; padding: 15px 20px; margin: -24px -24px 20px;">
              <h3 class="m-0">Edit Category</h3>
            </div>
            
            {{ include('category/_form.html.twig', {
                'button_label': 'Update',
                'button_class': 'btn text-white w-100' ~ ' update-btn'
            }) }}

            <div class="d-flex justify-content-between flex-wrap gap-2 mt-4">
              <a href="{{ path('app_category_index') }}" class="btn text-white px-4" style="background-color: #3a6ea5;">
                <i class="fa fa-arrow-left me-2"></i>Back to List
              </a>
              {{ include('category/_delete_form.html.twig', {
                  'button_class': 'btn text-white px-4' ~ ' delete-btn'
              }) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .main-content {
      margin-left: 250px;
      padding: 80px 20px 20px;
    }

    .dashboard-card {
      max-width: 600px;
      margin: 0 auto;
      background: #ffffff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 24px;
      position: relative;
    }

    .update-btn {
      background-color: #FBBC05;
      transition: all 0.3s;
      font-weight: 500;
      padding: 10px;
    }

    .update-btn:hover {
      background-color: #F9A602;
      color: white;
    }

    .delete-btn {
      background-color: #EA4335;
      transition: all 0.3s;
    }

    .delete-btn:hover {
      background-color: #D32F2F;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: 600;
      color: #444;
      font-size: 0.9rem;
      margin-bottom: 8px;
      display: block;
    }

    .form-control {
      border: 1px solid #ced4da;
      border-radius: 5px;
      padding: 12px;
      font-size: 0.9rem;
      transition: all 0.3s;
      width: 100%;
    }

    .form-control:focus {
      border-color: #4285F4;
      box-shadow: 0 0 0 0.2rem rgba(66, 133, 244, 0.25);
      outline: none;
    }

    .form-error-message {
      color: #EA4335;
      font-size: 0.85rem;
      margin-top: 5px;
    }

    textarea.form-control {
      min-height: 120px;
    }
  </style>
{% endblock %}