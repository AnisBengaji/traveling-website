<div class="container py-5">
  <h1 class="text-center mb-5 fw-bold text-primary">Category Details</h1>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white p-4">
          <h2 class="mb-0 fw-semibold">{{ category.nomCategory }}</h2>
        </div>
        <div class="card-body p-4">
          <table class="table table-striped table-hover mb-4">
            <tbody>
              <tr>
                <th scope="row" class="fw-semibold text-muted">ID</th>
                <td>{{ category.idCategory }}</td>
              </tr>
              <tr>
                <th scope="row" class="fw-semibold text-muted">Name</th>
                <td>{{ category.nomCategory }}</td>
              </tr>
              <tr>
                <th scope="row" class="fw-semibold text-muted">Description</th>
                <td>{{ category.description ?: 'No description available.' }}</td>
              </tr>
            </tbody>
          </table>

          <div class="d-flex justify-content-between flex-wrap gap-2">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary rounded-pill">
              <i class="fa fa-arrow-left me-2"></i>Back to List
            </a>
            <a href="{{ path('app_category_edit', {'idCategory': category.idCategory}) }}" class="btn btn-primary rounded-pill">
              <i class="fa fa-edit me-2"></i>Edit Category
            </a>
            {{ include('category/_delete_form.html.twig', {'button_class': 'btn btn-danger rounded-pill'}) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}